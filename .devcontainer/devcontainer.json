{
    "name": "R Development",
    "image": "ghcr.io/rocker-org/devcontainer/tidyverse:4.4",
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "REditorSupport.r",
                "quarto.quarto",
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens"
            ],
            "settings": {
                "r.rterm.linux": "/usr/local/bin/radian",
                "r.bracketedPaste": true,
                "r.sessionWatcher": true,
                "r.plot.useHttpgd": true,
                "r.alwaysUseActiveTerminal": true,
                "r.plot.viewer": "Viewer",
                "r.rterm.option": [
                    "--no-save",
                    "--no-restore",
                    "--quiet"
                ],
                "r.editor.tabSize": 2,
                "r.editor.formatOnSave": true,
                "r.editor.formatOnType": true,
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "zsh"
                    }
                },
                "keyboard.dispatch": "keyCode",
                "[r]": {
                    "editor.shortcuts.r.pipe": true,
                    "editor.snippets.codeActions.enabled": true
                },
                "workbench.editorAssociations": {
                    "*.r": "r"
                },
                "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
                "keybindings": [
                    {
                        "key": "ctrl+shift+m",
                        "command": "type",
                        "args": { "text": " |> " },
                        "when": "editorTextFocus && editorLangId == 'r'"
                    },
                    {
                        "key": "alt+-",
                        "command": "type",
                        "args": { "text": " <- " },
                        "when": "editorTextFocus && editorLangId == 'r'"
                    },
                    {
                        "key": "ctrl+enter",
                        "command": "r.runSelection",
                        "when": "editorTextFocus && editorLangId == 'r'"
                    },
                    {
                        "key": "ctrl+shift+s",
                        "command": "r.source",
                        "when": "editorTextFocus && editorLangId == 'r'"
                    },
                    {
                        "key": "ctrl+up",
                        "command": "r.runPrevious",
                        "when": "editorTextFocus && editorLangId == 'r'"
                    }
                ]
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": "languageserver,httpgd",
            "installSystemRequirements": true
        }
    }
}

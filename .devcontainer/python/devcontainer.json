{
    "name": "Python",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "jupyter.interactiveWindow.textEditor.executeSelection": true,
                "python.REPL.sendToNativeREPL": false
            }
        }
    }
}